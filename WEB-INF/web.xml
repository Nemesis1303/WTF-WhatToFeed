<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web
Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>What to feed</display-name>
	<servlet>
		<servlet-name>getRecipe</servlet-name>
		 <servlet-class>getRecipe</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>createRecipe</servlet-name>
		 <servlet-class>createRecipe</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>filtering</servlet-name>
		 <servlet-class>filtering</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>searchRecipes</servlet-name>
		 <servlet-class>searchRecipes</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>listAllRecipes</servlet-name>
		 <servlet-class>listAllRecipes</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>getRecipe </servlet-name>
		<url-pattern>/getRecipe </url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>createRecipe </servlet-name>
		<url-pattern>/createRecipe </url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>filtering </servlet-name>
		<url-pattern>/filtering </url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>searchRecipes </servlet-name>
		<url-pattern>/searchRecipes </url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>listAllRecipes </servlet-name>
		<url-pattern>/listAllRecipes </url-pattern>
	</servlet-mapping>
	
  <welcome-file-list id="WelcomeFileList">
    <welcome-file>homepage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
